<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext for emulator localhost -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain>
    </domain-config>

    <!-- Allow cleartext for real device local IP -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">192.168.43.173</domain>
    </domain-config>
</network-security-config>
